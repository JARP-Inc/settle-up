generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  uuID      String @id @unique @default(cuid())
  firstName String
  lastName  String
  debts     Tab[]  @relation("DebtorTab")
  credits   Tab[]  @relation("CreditorTab")

  @@index([uuID])
}

model Tab {
  amount     Float
  settled    Boolean @default(false)
  debtor     User    @relation("DebtorTab", fields: [debtorID], references: [uuID])
  creditor   User    @relation("CreditorTab", fields: [creditorID], references: [uuID])
  debtorID   String // owes money     (from) @map("debtorId")
  creditorID String // is owed money  (to) @map("creditorId")

  @@id([debtorID, creditorID])
  @@unique([debtorID, creditorID])
  @@index([debtorID])
  @@index([creditorID])
}
